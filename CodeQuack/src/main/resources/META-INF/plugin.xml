<idea-plugin>
    <id>org.example.CodeQuack</id>
    <name>Rubber Duck Debugger</name>
    <vendor>MNM</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="CodeQuack"
                    secondary="true"
                    icon="org.example.CodeQuackIcons.PLUGIN_ICON"
                    anchor="right"
                    factoryClass="org.example.CodeQuackWindowFactory"/>

        <notificationGroup
                id="CodeQuack Notifications"
                displayType="BALLOON"
                isLogByDefault="false"/>
        <postStartupActivity implementation="org.example.CodeQuackActivity"/>
    </extensions>

    <actions>
        <action id="org.example.AskDuck"
                class="org.example.actions.AskDuckAction"
                text="Ask Code Quack"
                description="Asks the Rubber Duck about the selected code">

            <add-to-group group-id="EditorPopupMenu" anchor="first"/>

            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl D"/>
        </action>
    </actions>
</idea-plugin>